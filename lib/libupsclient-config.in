Version="@PACKAGE_VERSION@"
prefix=@prefix@
exec_prefix=@exec_prefix@
Libs="-L@libdir@ -lupsclient @LIBSSL_LDFLAGS@"
Cflags="-I@includedir@ @LIBSSL_CFLAGS@"

case "$1" in

  --cflags)
	echo "$Cflags"
	;;
  --libs)
	echo "$Libs"
	;;
  --version)
	echo $Version
	;;
  *)
	echo "Usage: libupsclient-config {--cflags|--libs|--version}"
	exit 1
esac

